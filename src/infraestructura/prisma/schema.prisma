// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  last_name   String?
  age       Int?
  phone_number    String  @unique
  district     String?
  gender       String?
  email     String  @unique
  role Roles? @default(USER)
  appointment Appointment[]
  created_at String

  @@map("user")
}

model TypeNail {
  id String  @id @default(auto())  @map("_id") @db.ObjectId
  name String @unique
  allowed_detalis DetailNail[]
  default_price Int
  duration Int
  appointment Appointment[]
  deleted_at String?
  created_at String

  @@map("typesnails")
}

model DetailNail {
  id String  @id @default(auto())  @map("_id") @db.ObjectId
  name String
  price Int
  duration Int
  type TypeNail? @relation(fields: [type_id], references: [id])
  type_id String? @db.ObjectId
  deleted_at String?
  created_at String

  @@map("detailsnails")
}

model Scheduler {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  appointments Json
  created_at String

  @@map("scheduler")
}

model Appointment {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  //...........user_id...........
  user User @relation(fields: [user_id],references: [id])
  user_id String @db.ObjectId
  //..........types_of_details............
  types_of_nails TypeNail @relation(fields: [types_of_nails_id],references: [id])
  types_of_nails_id String @db.ObjectId
  //..........details_of_nails...........
  details_of_nails_id String[]
  status Status @default(RESERVED)
  status_date String
  status_logs Json
  duration Int
  reserved_at String
  deleted_at String?
  created_at String

  @@map("appointments")
}

enum Status {
  RESERVED
  CONFIRMED
  CANCELED
  DELETED
}
enum Roles {
  ADMIN
  USER
}
