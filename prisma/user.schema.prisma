// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../node_modules/@dbuser"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  last_name   String
  age       Int?
  phone_number    String  @unique
  district     String?
  gender       String?
  email     String  @unique
  role Roles? @default(USER)
  created_at String

  @@map("user")
}

enum Roles {
  ADMIN
  USER
}
